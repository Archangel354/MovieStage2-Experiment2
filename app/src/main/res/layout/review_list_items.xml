<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/review_layout"
    android:gravity="center"
    android:padding="8dp"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/txtAuthorLabel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/review_marginstart"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="@dimen/favoritesMargin"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="@dimen/favoritesMargin"
        android:layout_toStartOf="@+id/txtAuthor"
        android:layout_toLeftOf="@+id/txtAuthor"
        android:background="@color/colorFavoriteList"
        android:gravity="center"
        android:text="@string/authorLabel"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtContentLabel"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/review_marginstart"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="282dp"
        android:layout_marginRight="282dp"
        android:background="@color/colorFavoriteList"
        android:gravity="center"
        android:text="@string/contentLabel"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAuthor"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="128dp"
        android:layout_marginRight="128dp"
        android:layout_marginBottom="@dimen/favoritesMargin"
        android:background="@color/colorFavoriteList"
        android:gravity="center"
        android:hint="@string/authorHint"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="wrap_content"
        android:layout_height="646dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/review_marginstart"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorFavoriteList"
        android:gravity="center_vertical"
        android:hint="@string/review_content_hint"
        android:paddingLeft="@dimen/favoritesPaddingLeft"
        android:paddingBottom="10dp"
        android:textSize="16dp" />


</RelativeLayout>